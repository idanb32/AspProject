@model List<ASPProject.Models.Animal>
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Catalog</title>
</head>
<body>
    <form asp-controller="Animal" asp-action="catalog">
        <select name="id" onchange="this.form.submit()" value="@ViewBag.selected">
            @if (ViewBag.selected == 0)
            {
                <option value="0" selected>All</option>
            }
            else
            {
                <option value="0">All</option>

            }
            @foreach (var item in ViewBag.Categories)
            {
                if (ViewBag.selected == item.CategoryId)
                {
                    <option value="@item.CategoryId" selected>@item.Name</option>
                }
                else
                {
                    <option value="@item.CategoryId">@item.Name</option>
                }
            }
        </select>
    </form>
    @await Html.PartialAsync("_TableView")

</body>
</html>
